<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="154dp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/instagram" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="135dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="182dp"
        android:layout_marginRight="182dp"
        android:layout_marginBottom="522dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:srcCompat="@drawable/instagram_user_picture" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="170dp"
        android:layout_marginRight="170dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="0\n게시물"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton1"
        app:layout_constraintTop_toTopOf="@+id/imageButton1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="381\n팔로워"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.903"
        app:layout_constraintStart_toEndOf="@+id/imageButton1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="79dp"
        android:layout_height="52dp"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="137dp"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="123\n팔로잉"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButton1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button4"
        android:layout_width="333dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="475dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="프로필편집"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageButton1"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="유재혁"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="398dp"
        android:layout_height="418dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1">

        <TableRow>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="134dp"
                android:layout_height="131dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="134dp"
                android:layout_height="131dp" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="134dp"
                android:layout_height="131dp" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="134dp"
                android:layout_height="131dp" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="134dp"
                android:layout_height="131dp" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="134dp"
                android:layout_height="131dp" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="134dp"
                android:layout_height="131dp" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="134dp"
                android:layout_height="131dp" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="134dp"
                android:layout_height="131dp" />
        </TableRow>

        <TableRow>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_span="3"
                app:itemBackground="@android:color/black"
                app:itemIconTint="@drawable/menu_selector_color"
                app:itemTextColor="@drawable/menu_selector_color"
                app:labelVisibilityMode="unlabeled"
                app:menu="@menu/bottom_navigation_menu" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>